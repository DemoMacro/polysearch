{
  "name": "polysearch-webext",
  "displayName": "PolySearch",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "scripts": {
    "dev": "pnpm clear && cross-env NODE_ENV=development pnpm run /dev:.*/",
    "dev-firefox": "pnpm clear && cross-env NODE_ENV=development EXTENSION=firefox pnpm run /dev:.*/",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "pnpm build:background -- --mode development",
    "dev:web": "vite",
    "dev:js": "pnpm build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.mts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.mts",
    "pack": "cross-env NODE_ENV=production pnpm run /pack:.*/",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "lint": "eslint --cache ."
  },
  "devDependencies": {
    "@ffflorian/jszip-cli": "3.12.8",
    "@iconify/json": "2.2.421",
    "@nuxt/ui": "4.3.0",
    "@types/fs-extra": "11.0.4",
    "@types/webextension-polyfill": "0.12.4",
    "@vitejs/plugin-vue": "6.0.3",
    "@vue/compiler-sfc": "3.5.26",
    "@vueuse/core": "14.1.0",
    "chokidar": "5.0.0",
    "cross-env": "10.1.0",
    "crx": "5.0.1",
    "esno": "4.8.0",
    "fs-extra": "11.3.3",
    "npm-run-all": "4.1.5",
    "rimraf": "6.1.2",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "unplugin-auto-import": "20.3.0",
    "unplugin-icons": "22.5.0",
    "unplugin-vue-components": "30.0.0",
    "vite": "7.3.0",
    "vue": "3.5.26",
    "vue-demi": "0.14.10",
    "web-ext": "9.2.0",
    "webext-bridge": "6.0.1",
    "webextension-polyfill": "0.12.0"
  }
}
